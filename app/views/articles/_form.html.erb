<%= form_for @article, html: { class: "form-inline" } do |f| %>
 
  <% if @article.errors.any? %>
    <div id="error_explanation" class="alert alert-warning" role="alert">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="form-group">
    <%= f.label :"Title_(russian)" %><br>
    <%= f.text_field :title_rus, style: 'width:100%;', class: 'form-control' %>
  </div>
 
  <div class="form-group">
    <%= f.label :"Title_(english)" %><br>
    <%= f.text_field :title, style: 'width:100%;', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :date %><br>
    <%= f.date_field :date, class: 'form-control' %>
  </div>
 
  <div class="form-group">
    <%= f.label :source_url %><br>
    <%= f.text_field :src_url, style: 'width:100%;', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :country %><br>
    <%= f.country_select :country, { priority_countries: %w(RU BR IN CN ZA), prompt: ''}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :author %><br>
    <%= f.text_field :author, style: 'width:100%;', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :category %><br>
    <%= f.select :category, [
      '',
      'международные отношения',
      'экономика',
      'внутренняя политика',
      'мир труда',
      'документы',
      'другие материалы',
      'international relations',
      'investment and finance',
      'political events',
      'world of work',
      'documents',
      'other materials'
    ], class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :keywords %><br>
    <%= f.text_field :keywords, style: 'width:100%;', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :relevance %><br>
    <%= f.select :rel, [
      '',
      '0',
      '1',
      '2',
      '3',
      '4',
      '5'
    ], class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :text %><br>
    <%= f.text_area :text, :rows => 20, style: 'width:100%;', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit :Submit, class: 'btn btn-primary' %>
  </div>

<% end %>