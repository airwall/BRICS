<%= form_for @article do |f| %>
 
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :"Title_(russian)" %><br>
    <%= f.text_field :title_rus, style: 'width:100%;' %>
  </p>
 
  <p>
    <%= f.label :"Title_(english)" %><br>
    <%= f.text_field :title, style: 'width:100%;' %>
  </p>

  <p>
    <%= f.label :date %><br>
    <%= f.date_field :date %>
  </p>
 
  <p>
    <%= f.label :source_url %><br>
    <%= f.text_field :src_url, style: 'width:100%;' %>
  </p>

  <p>
    <%= f.label :country %><br>
    <%= f.text_field :country, style: 'width:100%;' %>
  </p>

  <p>
    <%= f.label :author %><br>
    <%= f.text_field :author, style: 'width:100%;' %>
  </p>

  <p>
    <%= f.label :category %><br>
    <%= f.select :category, [
      '',
      'международные отношения',
      'экономика',
      'внутренняя политика',
      'мир труда',
      'документы',
      'другие материалы',
      'international relations',
      'investment and finance',
      'political events',
      'world of work',
      'documents',
      'other materials'
    ] %>
  </p>

  <p>
    <%= f.label :keywords %><br>
    <%= f.text_field :keywords, style: 'width:100%;' %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text, :rows => 20, style: 'width:100%;' %>
  </p>

  <p>
    <%= f.submit :Submit %>
  </p>

<% end %>